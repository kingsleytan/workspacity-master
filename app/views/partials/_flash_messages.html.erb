<div id="flash-messages-container">
<div class="flash-messages">
<% flash.each do |k,v| %>
  <section class="message-container">
    <div class="alert alert-<%=k%>">
      <button type="button" id="close" class="close" data-dismiss="alert">
        &times;
      </button>
      <div class="message">
        <%= display_message(v) %>
      </div>
    </div>
  </section>
<% end %>

</div>
</div>
